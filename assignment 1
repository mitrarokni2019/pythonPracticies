# ## 04: Calculate specific character in a given string

# In[1]:


def CountChar(string, char):
    if not string:
        return 0
    else:
        return (string[0] == char) + CountChar(string[1:], char)


# In[2]:


string = "jogging"
char = "j"
print(CountChar(string, char))


# In[3]:


#4 second solution 
def findNr(s,ch, count=0):
    if s== '':
        return count
    else:
        if s[0]== ch:
            count = count+1
        return findNr(s[1:], ch , count )
        
        
s="my name is  mm mm mitra"
ch='m'
print(findNr(s,ch))


# ## 05: Power of

# In[12]:


def Pow(n, m):
    if (m == 0):
        return 1
    else:
        return n * Pow(n, m-1)   


# In[28]:


n, m = 2, 5
print(Pow(n, m))


# ## 06: Multiplication of integers

# In[7]:


def Mul(n, m):
    if (m == 0):
        return 0
    elif (m == 1):
        return n
    else:
        return n + Mul(n, m-1)


# In[8]:


n, m = 2, 5
print(Mul(n, m))


# ## 08: Harmonic sum

# In[9]:


def Harmonic(n):
    if (n == 1):
        return 1
    else:
        return (1 / n) + Harmonic(n-1)


# In[10]:


n = 2
print(Harmonic(n))


# ## 09: Largest value in a list

# In[ ]:


# first 
def Large(list):
    if len(list) == 1:
        return list[0]
    else:
        return list[0] if list[0] > Large(list[1:]) else Large(list[1:])
    
list = [1, 2, 3, 4, 5]
print(Large(list))    


# In[ ]:


#9 second way:
def large_value(list):
    if len(list) == 1:
        return list[0]
    else:
        big = large_value(list[1:])
        if list[0] > big:
            return list[0]
        else:
            return big

        
list = [2,44,5,0]
print(large_value(list))


# ## 10: Reverse order

# In[ ]:


def Reverse(string):
    if not string:
        return ""
    else:
        return string[-1] + Reverse(string[:-1])


# In[5]:


string = "sample string"
print(Reverse(string))


# ## 14: Matching parentheses

# In[19]:



def Match(string, counter = 0):
    if not string:
        return (counter == 0)
    if (counter > 0):
        return False
    if string[-1] == ")":
        return Match(string[:-1], counter-1)
    elif string[-1] == "(":
        return Match(string[:-1], counter+1)
    else:
        return Match(string[:-1], counter)


# In[20]:


string = "((((()))))"
print(Match(string))

string = "(()))))"
print(Match(string))


