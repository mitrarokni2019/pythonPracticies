#05: Insertion sort
def sortIns(l,n):
    if(n>1):
        sortIns(1,n-1)
        x= 1[n-1]
        i=n-2
        while(i>=0 and l[i]<x):
            l[i+1]=l[i]
            i=i-1
        l[i+1]=x
    
n=5
l=[2,7,4,5,61,22,34]
